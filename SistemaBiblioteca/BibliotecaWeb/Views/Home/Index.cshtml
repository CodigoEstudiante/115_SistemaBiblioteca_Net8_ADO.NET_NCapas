@{
    ViewData["Title"] = "Home Page";
}

<h1 class="mt-4">Dashboard</h1>
<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-3">
                        <h4 class="text-white-75 small">Total de libros</h4>
                        <h2 class="text-lg fw-bold" id="hLibros">1</h2>
                    </div>
                    <i class="fa-solid fa-book fa-2xl"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-3">
                        <h4 class="text-white-75 small">Total de Estudiantes</h4>
                        <h2 class="text-lg fw-bold" id="hEstudiantes">1</h2>
                    </div>
                    <i class="fa-solid fa-user-group fa-2xl"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-3">
                        <h4 class="text-white-75 small">Prestamos</h4>
                        <h2 class="text-lg fw-bold" id="hPrestamos">1</h2>
                    </div>
                    <i class="fa-solid fa-file-pen fa-2xl"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="me-3">
                        <h4 class="text-white-75 small">Devoluciones</h4>
                        <h2 class="text-lg fw-bold" id="hDevoluciones">1</h2>
                    </div>
                    <i class="fa-solid fa-repeat fa-2xl"></i>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/views/dashboard/dashboard.js"></script>

}